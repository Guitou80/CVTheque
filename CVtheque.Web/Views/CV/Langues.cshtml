@model ICollection<CVtheque.Web.Models.LangueVM>

@{
    ViewBag.Title = "Langues";
    Layout = null;
}

<br />

<div class="row grid-striped bg-primary">

    <div class="col-6">
        Label
    </div>
    <div class="col-5">
        Niveau
    </div>
    <div class="col-1"></div>

</div>

    @for (int i = 0; i < Model.Count(); i++)
    {

    <div class="row grid-striped highlightable" data-id="@Model.ElementAt(i).Id">

        <div class="col-6">
            @Model.ElementAt(i).Label
        </div>

        <div class="col-5">
            @Model.ElementAt(i).Niveau
        </div>

        <div class="col-1">
            <span class="green">
                <i class="fas fa-plus-square"></i>
            </span>
        </div>

    </div>

    }
