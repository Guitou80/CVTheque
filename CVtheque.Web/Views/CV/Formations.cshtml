@model ICollection<CVtheque.Web.Models.FormationVM>

@{
    ViewBag.Title = "Formations";
    Layout = null;
}

    <div class="row grid-striped bg-primary">

        <div class="col-3">
            Date de début
        </div>
        <div class="col-3">
            Date de fin
        </div>
        <div class="col-3">
            Ecole
        </div>
        <div class="col-3">
            Diplôme
        </div>
    </div>

    @for (int i = 0; i < Model.Count(); i++)
    {

    <div class="row grid-striped">

        <div class="col-3" data-id="@Model.ElementAt(i).Id">
            @Model.ElementAt(i).DateDebut.ToString("d")
        </div>
        <div class="col-3">
            @Model.ElementAt(i).DateFin.ToString("d")
        </div>
        <div class="col-3" data-id="@Model.ElementAt(i).Id">
            @Model.ElementAt(i).Diplome
        </div>
        <div class="col-3">
            @Model.ElementAt(i).Ecole
        </div>
    </div>

    }
