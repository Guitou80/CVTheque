@model ICollection<CVtheque.Web.Models.FormationVM>

@{
    ViewBag.Title = "Formations";
    Layout = null;
}

<div class="row grid-striped bg-primary">

    <div class="col-2">
        Date de début
    </div>
    <div class="col-3">
        Date de fin
    </div>
    <div class="col-3">
        Diplôme
    </div>
    <div class="col-3">
        Ecole
    </div>
    <div class="col-1">

    </div>
</div>


@for (int i = 0; i < Model.Count(); i++)
{

    <div class="row grid-striped highlightable" data-id="@Model.ElementAt(i).Id">

        <div class="col-2">
            @Model.ElementAt(i).DateDebut.ToString("d")
        </div>
        <div class="col-3">
            @Model.ElementAt(i).DateFin.ToString("d")
        </div>
        <div class="col-3">
            @Model.ElementAt(i).Diplome
        </div>
        <div class="col-3">
            @Model.ElementAt(i).Ecole
        </div>
        <div class="col-1">
                <span class="green">
                    <i class="fas fa-plus-square"></i>
                </span>
        </div>

    </div>

}
