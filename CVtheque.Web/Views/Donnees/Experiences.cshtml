@model ICollection<CVtheque.Web.Models.ExperienceVM>

@{
    ViewBag.Title = "Experiences";
    Layout = null;
}

<br />

<div class="row grid-striped bg-primary">

    <div class="col-4">
        Entreprise
    </div>
    <div class="col-4">
       Poste
    </div>
    <div class="col-4">
        
    </div>
</div>

<form action="/Donnees/DeleteExperience" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#AffichageExperiences" id="form4" method="post" novalidate="novalidate">

    @for (int i = 0; i < Model.Count(); i++)
    {

    <div class="row grid-striped">

        <div class="col-4">
            <input type="hidden" name="experiences[@i].Id" value="@Model.ElementAt(i).Id" />
            <input type="hidden" id="tobedel_@i" name="experiences[@i].ToBeDeleted" value="false" />
            @Model.ElementAt(i).Entreprise
        </div>
        <div class="col-4">
            @Model.ElementAt(i).Poste
        </div>
        <div class="col-4">
            <button type="button" class="btn btn-light">
                <span style="font-size: 1em; color: green;">
                    <i class="fas fa-edit" data-internalid="@Model.ElementAt(i).Id"></i>
                </span>
            </button>
            <button type="button" class="btn btn-light">
                <span style="font-size: 1em; color: red;">
                    <i class="fas fa-trash-alt" data-internalid="@i"></i>
                </span>
            </button>
        </div>
    </div>

    }

    <br />

    <button type="button" class="btn btn-light">
        <span style="font-size: 1.2em; color: green;">
            <i class="fas fa-plus-square"></i>
        </span>
    </button>

</form>
