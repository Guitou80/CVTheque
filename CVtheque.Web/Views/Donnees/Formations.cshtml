@model ICollection<CVtheque.Web.Models.FormationVM>

@{
    ViewBag.Title = "Formations";
    Layout = null;
}

<br />

<form action="/Donnees/DeleteFormation" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#AffichageFormations" id="form0" method="post" novalidate="novalidate">


    <div class="row grid-striped bg-primary">

        <div class="col-4">
            Diplôme
        </div>
        <div class="col-4">
            Ecole
        </div>
        <div class="col-4">

        </div>
    </div>

    @for (int i = 0; i < Model.Count(); i++)
    {

    <div class="row grid-striped">

        <div class="col-4">
            <input type="hidden" name="formations[@i].Id" value="@Model.ElementAt(i).Id" />
            <input type="hidden" id="tobedel_@i" name="formations[@i].ToBeDeleted" value="false" />
            @Model.ElementAt(i).Diplome
        </div>
        <div class="col-4">
            @Model.ElementAt(i).Ecole
        </div>
        <div class="col-4">
            <button type="button" class="btn btn-light">
                <span style="font-size: 1em; color: green;">
                    <i class="fas fa-edit" data-internalid="@Model.ElementAt(i).Id"></i>
                </span>
            </button>
            <button type="button" class="btn btn-light">
                <span style="font-size: 1em; color: red;">
                    <i class="fas fa-trash-alt" data-internalid="@i"></i>
                </span>
            </button>
        </div>
    </div>

    }

    <br />

    <button type="button" class="btn btn-light">
        <span style="font-size: 1.2em; color: green;">
            <i class="fas fa-plus-square"></i>
        </span>
    </button>

</form>
